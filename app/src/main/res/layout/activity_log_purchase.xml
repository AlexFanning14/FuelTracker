<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context="com.alexfanning.android.fueltracker.LogPurchase">

    <TextView
        android:layout_width="214dp"
        android:layout_height="30dp"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="85dp"
        android:layout_marginTop="46dp"
        android:id="@+id/txtViewLogPurchase"
        android:fontFamily="monospace"
        android:text="Log Purchase"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="130dp"
        android:layout_height="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:text="Date:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewLogPurchase" />

    <TextView
        android:id="@+id/tvDateVal"
        android:layout_width="175dp"
        android:layout_height="32dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:text="(dateVal)"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/tvDate"
        app:layout_constraintTop_toBottomOf="@+id/txtViewLogPurchase" />

    <TextView
        android:id="@+id/tvLitres"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Litres:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDate" />

    <EditText
        android:id="@+id/tbLitres"
        android:layout_width="175dp"
        android:layout_height="32dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/tvLitres"
        app:layout_constraintTop_toBottomOf="@+id/tvDateVal" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Total Price:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLitres" />

    <EditText
        android:id="@+id/tbTotPrice"
        android:layout_width="175dp"
        android:layout_height="32dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/tvPrice"
        app:layout_constraintTop_toBottomOf="@+id/tbLitres" />


    <TextView
        android:id="@+id/tvPricePerLitre"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Price P/L:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice" />

    <EditText
        android:id="@+id/tbPricePL"
        android:layout_width="175dp"
        android:layout_height="32dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/tvPricePerLitre"
        app:layout_constraintTop_toBottomOf="@+id/tbTotPrice" />

    <TextView
        android:id="@+id/tvGarage"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Garage:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPricePerLitre" />

    <EditText
        android:id="@+id/tbGarageVal"
        android:layout_width="175dp"
        android:layout_height="32dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@+id/tvGarage"
        app:layout_constraintTop_toBottomOf="@+id/tbPricePL" />


</android.support.constraint.ConstraintLayout>
